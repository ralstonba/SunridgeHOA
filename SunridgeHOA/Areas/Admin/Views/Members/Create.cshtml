@model SunridgeHOA.Models.ViewModels.BoardMembersViewModel
@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info">Create a Board Member</h2>

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="BoardMember.Owner.FirstName"></label>
            </div>
            <div class="col-5">
                <input asp-for="BoardMember.Owner.FirstName" class="form-control" />
            </div>
            <span asp-validation-for="BoardMember.Owner.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="BoardMember.Owner.LastName"></label>
            </div>
            <div class="col-5">
                <input asp-for="BoardMember.Owner.LastName" class="form-control" />
            </div>
            <span asp-validation-for="BoardMember.Owner.LastName" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Create" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
