@model SunridgeHOA.Models.Key

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Key</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="SerialNumber" class="control-label"></label>
                <input asp-for="SerialNumber" class="form-control" />
                <span asp-validation-for="SerialNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsArchive" /> @Html.DisplayNameFor(model => model.IsArchive)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="LastModifiedDate" class="control-label"></label>
                <input asp-for="LastModifiedDate" class="form-control" />
                <span asp-validation-for="LastModifiedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KeyHistoryID" class="control-label"></label>
                <select asp-for="KeyHistoryID" class="form-control" asp-items="ViewBag.KeyHistoryID"></select>
                <span asp-validation-for="KeyHistoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

