@model SunridgeHOA.Models.ViewModels.ClassifiedViewModel

@{
    ViewData["Title"] = "Add Lot";
}

<h2>Add Lot</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-area="Admin" asp-controller="Account" asp-action="CreateLot"  method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Lots.Name">Name:</label>
                <input asp-for="Lots.Name" /> <br />
                <label asp-for="Lots.Price">Price:</label>
                <input asp-for="Lots.Price" /> <br />
                <label asp-for="Lots.Description">Description:</label>
                <input asp-for="Lots.Description" /> <br />
                <label asp-for="Lots.PhoneNumber">Phone Number:</label>
                <input asp-for="Lots.PhoneNumber" /> <br />
                <label asp-for="Lots.Email">Email:</label>
                <input asp-for="Lots.Email" /> <br /> <br />
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-area="Public" asp-controller="Home" asp-action="Lots">Back to List</a>
</div>

