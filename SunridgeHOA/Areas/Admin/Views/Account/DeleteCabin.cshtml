@model SunridgeHOA.Models.ViewModels.ClassifiedViewModel
@{
    ViewData["Title"] = "Delete Cabin";
}

<br />
<h2 class="text-info">Delete Cabin</h2>

<form method="post" asp-action="DeleteCabin" enctype="multipart/form-data">
    <div class="p-4 border rounded row">
        <input type="hidden" asp-for="Cabins.ID" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Cabins.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Cabins.Name" class="form-control" />
                </div>
                <span asp-validation-for="Cabins.Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Cabins.Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Cabins.Price" class="form-control" />
                </div>
                <span asp-validation-for="Cabins.Price" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Cabins.Image"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="files" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Cabins.Description"></label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.Cabins.Description" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Cabins.PhoneNumber"></label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.Cabins.PhoneNumber" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Cabins.Email"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Cabins.Email" class="form-control" />
                </div>
                <span asp-validation-for="Cabins.Email" class="text-danger"></span>
            </div>
        </div>
        @if (Model.Lots.Image != null)
        {
            <div class="col-1"></div>
            <div class="col-3">
                <img src="@Model.Cabins.Image" width="100%" style="border-radius: 5px; border: 1px solid #bbb9b9;" />
            </div>
            <br />
        }
        else
        {
            <div class="col-1"></div>
            <div class="col-3">
                <img src="~/img/land-icon-01.svg" width="100%" style="border-radius: 5px; border: 1px solid #bbb9b9;" />
            </div>
            <br />
        }
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-danger" value="Delete" />
            <a asp-area="Public" asp-controller="Home" asp-action="Cabins" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>
