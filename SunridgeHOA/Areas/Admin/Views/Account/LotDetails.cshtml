@model SunridgeHOA.Models.ViewModels.ClassifiedViewModel
@{
    ViewData["Title"] = "Lot Details";
}

<br />
<h2 class="text-info">Lot Details</h2>

    <div class="p-4 border rounded row">
        <input type="hidden" asp-for="Lots.ID" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Lots.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Lots.Name" class="form-control" />
                </div>
                <span asp-validation-for="Lots.Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Lots.Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Lots.Price" class="form-control" />
                </div>
                <span asp-validation-for="Lots.Price" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Lots.Image"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="files" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Lots.Description"></label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.Lots.Description" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Lots.PhoneNumber"></label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.Lots.PhoneNumber" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Lots.Email"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Lots.Email" class="form-control" />
                </div>
                <span asp-validation-for="Lots.Email" class="text-danger"></span>
            </div>
        </div>
        @if (Model.Lots.Image != null)
        {
            <div class="col-1"></div>
            <div class="col-3">
                <img src="@Model.Lots.Image" width="100%" style="border-radius: 5px; border: 1px solid #bbb9b9;" />
            </div>
            <br />
        }
        else
        {
            <div class="col-1"></div>
            <div class="col-3">
                <img src="~/img/land-icon-01.svg" width="100%" style="border-radius: 5px; border: 1px solid #bbb9b9;" />
            </div>
            <br />
        }

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Edit" />
            <a asp-area="Public" asp-controller="Home" asp-action="Lots" class="btn btn-success">Back to List</a>
        </div>
    </div>