@model IEnumerable<SunridgeHOA.Models.ClassifiedListing>
@{
    ViewData["Title"] = "Cabins";
}

@if (User.IsInRole(SunridgeHOA.Utilities.StaticDetails.AdminEndUser))
{
    <a class="nav-link" asp-area="Admin" asp-controller="Account" asp-action="AddCabin">
        <i class="fas fa-plus-circle"></i>
        Add Cabin
    </a>
}

<!-- inro section Grid -->
<section class="p-4">
    <div class="container">
        <div class="container container-fluid no2">
            <h1 class="main-heading text-center mt-5">Cabins for sale</h1>
        </div>
    </div>
</section>

<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Price)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Description)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.ListingDate)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Email)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.IsArchive)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.LastModifiedDate)
            </th>
            <th></th>
            <th></th>

        </tr>

        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @String.Format("{0:c}", item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.ListingDate)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.IsArchive)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.LastModifiedDate)
                    </td>
                    <td style="width:150px">
                        <div class="btn-group" role="group">
                            <a type="button" class="btn btn-primary" asp-area="Admin" asp-controller="Account" href="@Url.Action("EditCabin"+Model)">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="Account" href="@Url.Action("CabinDetails"+Model)">
                                <i class="fas fa-list-alt"></i>
                            </a>
                            <a type="button" class="btn btn-danger" asp-area="Admin" asp-controller="Account" href="@Url.Action("DeleteCabin"+Model)">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        }

    </table>
</div>


