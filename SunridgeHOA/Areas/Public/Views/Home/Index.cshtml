@model List<SunridgeHOA.Models.Banner>
@{
    ViewData["Title"] = "Home";
}
<!-- Masthead -->
@if (User.IsInRole(SunridgeHOA.Utilities.StaticDetails.AdminEndUser))
{
    <a class="nav-link" asp-area="Admin" asp-controller="Banner" asp-action="Index">
        <i class="far fa-edit"></i>
        Edit Banner
    </a>
}
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="7000">
    <div class="carousel-inner">
        @foreach (var item in Model)
        {
            if (item ==
                Model.First())
            {
                <div class="carousel-item active">
                    <img class="masthead9 bg-primary" src="..@Html.DisplayFor(modelItem => item.Image)" />
                    <header class="text-white text-center" id="bannerHeader">
                        <div id="carouselTextBox" class="container w-4 p-4">
                            <h1>@Html.DisplayFor(modelItem => item.Header)</h1>
                            <p style="font-size: 18pt;">
                                @Html.DisplayFor(modelItem => item.Body)
                            </p>
                        </div>
                    </header>
                </div>
            }
            else
            {
                <div class="carousel-item">
                    <img class="masthead9 bg-primary" src="..@Html.DisplayFor(modelItem => item.Image)" />
                    <header class="text-white text-center" id="bannerHeader">
                        <div id="carouselTextBox" class="container w-4 p-4">
                            <h1>@Html.DisplayFor(modelItem => item.Header)</h1>
                            <p style="font-size: 18pt;">
                                @Html.DisplayFor(modelItem => item.Body)
                            </p>
                        </div>
                    </header>
                </div>
            }
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<a class="weatherwidget-io" href="https://forecast7.com/en/41d30n111d81/eden/?unit=us" data-label_1="Sunridge" data-label_2="WEATHER" data-theme="original">EDEN WEATHER</a>
<script>
    !function (d, s, id) { var js, fjs = d.getElementsByTagName(s)[0]; if (!d.getElementById(id)) { js = d.createElement(s); js.id = id; js.src = 'https://weatherwidget.io/js/widget.min.js'; fjs.parentNode.insertBefore(js, fjs); } }(document, 'script', 'weatherwidget-io-js');
</script>

<!-- Icons Grid -->
<section class="features-icons  text-center">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="features-icons-item mx-auto mb-5 mb-lg-3">
                    <div class="features-icons-icon d-flex">
                        <img style="margin: 0 auto;" src="img/index-icons/clock-icon.svg" alt="rules-icon">
                    </div>
                    <h3>Calendar &amp; Events</h3>
                    <p class="lead">See what’s happening around the Sunridge community.</p>
                    <button asp-action="EventCalender" class="btn-primary"><a class="text-white" asp-action="EventCalender">More Info</a></button>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                    <div class="features-icons-icon d-flex">
                        <img style="margin: 0 auto;" src="img/index-icons/computer-icon.svg" alt="rules-icon">
                    </div>
                    <h3>Classifieds &amp; Ads</h3>
                    <p class="lead">Buy & Sell Property or Advertise a service at Sundridge</p>
                    <button asp-action="EventCalender" class="btn-primary"><a class="text-white" asp-action="Lots">More Info</a></button>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                    <div class="features-icons-icon d-flex">
                        <img style="margin: 0 auto;" src="img/index-icons/stack-icon.svg" alt="rules-icon">
                    </div>
                    <h3>Rules</h3>
                    <p class="lead">Click for more information regarding rules, covenants, and by-laws.</p>
                    <button asp-action="EventCalender" class="btn-primary"><a class="text-white" asp-action="Rules">More Info</a></button>
                </div>
            </div>
        </div>
    </div>
</section>

