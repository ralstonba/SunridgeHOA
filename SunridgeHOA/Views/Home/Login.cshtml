
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2> <br />

<form method="post">
    <div class="form-group">
        Email Address: <br />
        <input type="text" id="loginEmail" class="form-control" /> <br /> <br />
        Password: <br />
        <input type="password" id="loginPassword" class="form-control" /> <br /> <br />

        <button type="submit" class="btn btn-default">Submit</button>
    </div>
</form>